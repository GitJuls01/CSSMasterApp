<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/tq_quiz_container"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:id="@+id/title_quiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Quiz Title"
        android:textStyle="bold"
        android:textSize="22sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="10dp"
        android:textColor="@color/dark_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_take_quiz" />

    <ImageButton
        android:id="@+id/btn_take_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/tq_take_quiz_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/desc_quiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-3dp"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/dark_green"
        app:layout_constraintTop_toBottomOf="@id/title_quiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_take_quiz" />

    <TextView
        android:id="@+id/items_quiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Items:"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-12dp"
        android:textColor="@color/dark_green"
        app:layout_constraintEnd_toStartOf="@+id/btn_take_quiz"
        app:layout_constraintTop_toBottomOf="@id/desc_quiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
