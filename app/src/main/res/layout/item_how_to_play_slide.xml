<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Vertical Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_center_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.67"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_center_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <!-- Horizontal Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_top_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_bottom_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.63"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_bottom_zone_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"/>

    <!-- Center PC Image -->
    <ImageView
        android:id="@+id/center_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Wrong input Text -->
    <TextView
        android:id="@+id/wrong_input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wrong input of hardware"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/center_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/success_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Successfully built and booted!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/center_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/failed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Failed to build and boot!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/center_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/warning_barrier"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="wrong_input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Instruction -->
    <ImageView
        android:id="@+id/instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/warning_barrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Parts: direct children of ConstraintLayout -->
    <ImageView
        android:id="@+id/part1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/instruction_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guide_center"/>

    <ImageView
        android:id="@+id/part2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/instruction_text"
        app:layout_constraintStart_toEndOf="@id/guide_center"
        app:layout_constraintEnd_toStartOf="@id/guide_center_2"/>

    <ImageView
        android:id="@+id/part3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/instruction_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guide_center_2"/>

    <ImageView
        android:id="@+id/part4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@+id/part2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guide_center_3"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/part5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@+id/part2"
        app:layout_constraintStart_toEndOf="@id/guide_center_3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Explanation -->
    <TextView
        android:id="@+id/explanation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There's an \nexplanation why"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/failed_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/explain_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cs_explain_button"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/explanation_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/extra_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cs_arrow"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/explain_button"
        app:layout_constraintStart_toStartOf="@id/explain_button"
        app:layout_constraintEnd_toEndOf="@id/explain_button"/>

    <ImageView
        android:id="@+id/broke_pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cs_broke_pc"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/explanation_text"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/man_trophy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cs_man_trophy"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/success_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/dark_green"
        app:cornerRadius="24dp"
        android:visibility="gone"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/center_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.5"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
